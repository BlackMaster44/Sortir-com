.user-display{
    display: flex;
    flex-direction: column;
    font-size: 1.5rem;
    align-items: center;
    >div{
        display: flex;
        width: 600px;
        justify-content: space-between;
        >div{
            padding: 1rem 0;
            display: flex;
            flex-basis: 50%;
            align-items: center;
            &:nth-child(2){
                flex-basis: 70%;
                justify-content: flex-end;
            }
        }
        >a {
            flex-grow: 1;
            display: flex;
            flex-basis: 50%;
            >button{
                flex-basis: 100%;
            }
        }
    }
    >:nth-child(odd){
        background-color: lightblue;
    }
    >:nth-last-child(1){
        justify-content: space-around;
        gap: 10px;
    }
}