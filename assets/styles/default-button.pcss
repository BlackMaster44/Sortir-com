button{
    font-size: 1.2rem;
    box-shadow: inset 0 0 1px 0 #beedff, inset 0 3px 1px 1px #00bcff, 0 3px 2px 0 #002c6e;
    padding: 15px 20px;
    border-radius: 5px;
    background: var(--color-primary);
    font-weight: bold;
    color: var(--color-base-button);
    &:hover{
        background-color: #5fd7ff;
        cursor: pointer;
        box-shadow: inset 0 1px 0 1px white, inset 0 3px 0 1px #00bcff, 0 4px 1px 0px #002c6e;
    }
}