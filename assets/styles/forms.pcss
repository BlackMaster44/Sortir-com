form{
    display: flex;
    justify-content: center;
    width: 100%;
    >div{
        width: 80%;
        >div{
            display: flex;
            flex-flow: column nowrap;
            justify-content: space-between;
            >input{
                font-size: 1.5em;
                height: 1.2em;
                @media screen and (min-width: 600px){
                    font-size: 1em;
                }
            }
        }
    }
}