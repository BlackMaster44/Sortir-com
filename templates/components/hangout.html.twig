<div class="hangout">
    <a href="{{ path('hangout_details', {'id': hangout.id}) }}">
        <div class="hangout-img">
            <img src="{{ asset('img/default-hangout-256.png') }}" alt="default hangout"/>
        </div>
        <div class="hangout-text">
            <h3 class="hangout-name">{{ hangout.name }}</h3>
            <p class="hangout-site"><i class="fa-solid fa-house"></i> {{ hangout.site.name }}</p>
            <p class="hangout-start-timestamp"><i class="fa-solid fa-calendar-days"></i> {{ hangout.startTimestamp | date('d/m/y H:i') }}</p>
            {{ hangout.state | status }}
            <p class="hangout-capacity">
                <i class="fa-solid fa-user"></i> <span class="hangout-participants">
                    {{ hangout.participants | length }}
                </span>/
                <span class="hangout-total-slots">
                  {{ hangout.maxSlots }}
                </span>
            </p>
        </div>
    </a>
    <div class="users-going">
        <p><i class="fa-solid fa-users"></i> Going:
        {% for person in hangout.participants %}
            <a href="{{ path('user_profile', {'id': person.id}) }}">{{ person.firstName }}</a>
        {% endfor %}
        </p>
    </div>
</div>