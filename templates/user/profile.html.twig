{% extends 'base.html.twig' %}

{% block body %}
    <div class="user-display">
        <div>
            <div>Profile pic:</div>
            <div>
                {% if user.imageUrl is empty %}
                <img src=
                     "{{asset('img/Default_pfp.jpg')}}" alt="profile-pic"/>
                {% else %}
                <img src=
                     "{{asset('uploads/userImages/'~user.imageUrl)}}" alt="profile-pic"/>
                {% endif %}
            </div>
        </div>
        <div>
            <div>Email:</div><div>{{ user.email }}</div>
        </div>
        <div>
            <div>First Name:</div><div>{{ user.firstName }}</div>
        </div>
        <div>
            <div>Last Name:</div><div>{{ user.lastName }}</div>
        </div>
        <div>
            <div>Phone nÂ°:</div><div>{{ user.phone }}</div>
        </div>
        <div>
            <div>Site:</div><div>{{ user.site.name }}</div>
        </div>
    </div>
{% endblock %}

{% block title %}
    {{ parent() }} | user profile
{% endblock %}

