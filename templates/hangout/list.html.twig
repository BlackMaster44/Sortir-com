{% extends 'base.html.twig' %}

{% block body %}
    <h2>Join Us for a Hangout !</h2>
    <div class="filters">
        <h3>Filter</h3>
        <div style="background: #B0413E" class="siteFilter">site</div>
        <div style="background: #B0413E" class="nameFilter">name</div>
        <div style="background: #B0413E" class="dateFilter">date</div>
        <div style="background: #B0413E" class="checkFilters">checkFilters</div>
    </div>
    <section class="hangoutContainer">
        {% for hangout in hangouts %}
            <div class="hangout">
                <a href="{{ path('hangout_details', {'id': hangout.id}) }}">
                    <p>{{ hangout.site.name }}</p>
                    <p>{{ hangout.startTimestamp | date('d/m/y H:i') }}</p>
                    <p>{{ hangout.participants | length }} / {{ hangout.maxSlots }}</p>
                    <p>{{ hangout.name }}</p>
                </a>
            </div>
        {% endfor %}
        <button class="createHangoutButton"><a href="{{ path('hangout_create') }}">Create</a></button>
    </section>
{% endblock %}

{% block title %}
{{ parent() }} | hangout list
{% endblock %}

