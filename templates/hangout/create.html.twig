{% extends 'base.html.twig' %}

{% block title %}
{% endblock %}

{% block javascripts%}
    {{ parent() }}
    {{ encore_entry_script_tags('create-hangout') }}
{% endblock %}

{% block body %}
    <h3>Cr√©er une sortie</h3>
    {{ form_start(hangoutForm, {'attr': {'class': 'hangout-create-form'}}) }}
    <div>
        {{ form_row(hangoutForm.name) }}
        {{ form_row(hangoutForm.startTimestamp) }}
        {{ form_row(hangoutForm.lastRegisterDate) }}
        {{ form_row(hangoutForm.maxSlots) }}
        {{ form_row(hangoutForm.duration) }}
        {{ form_row(hangoutForm.informations) }}
        <div class="hangout-place-row">
            {{ form_label(hangoutForm.place) }}
            {{ form_widget(hangoutForm.place) }}
            {{ form_errors(hangoutForm.place) }}
        </div>
        <div class="form-buttons">
            {{ form_row(hangoutForm.addPlace) }}
            {{ form_row(hangoutForm.publish) }}
            {{ form_row(hangoutForm.save) }}
            {{ form_row(hangoutForm.cancel) }}
        </div>
        {{ form_end(hangoutForm) }}
    </div>
    <div class="place-form">
        {{ form_start(placeForm) }}
        <div>
        {{ form_row(placeForm.name) }}
        {{ form_row(placeForm.street) }}
        {{ form_row(placeForm.latitude) }}
        {{ form_row(placeForm.longitude) }}
        {{ form_row(placeForm.city) }}
        {{ form_row(placeForm.submit) }}
        {{ form_end(placeForm) }}
        </div>
    </div>
    <div class="autofill-site-fields">
        <div>
            <div><h4 class="form-title-fetch">City</h4></div>
            <div id="create-form-city"></div>
        </div>
        <div>
            <div><h4 class="form-title-fetch">Street</h4></div>
            <div id="create-form-street"></div>
        </div>
        <div>
            <div><h4 class="form-title-fetch">Postcode</h4></div>
            <div id="create-form-postcode"></div>
        </div>
        <div>
            <div><h4 class="form-title-fetch">Latitude</h4></div>
            <div id="create-form-latitude"></div>
        </div>
        <div>
            <div><h4 class="form-title-fetch">Longitude</h4></div>
            <div id="create-form-longitude"></div>
        </div>
    </div>
{% endblock %}

